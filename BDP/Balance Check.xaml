<Window x:Class="BDP.Balance_Check"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BDP"
        mc:Ignorable="d"
        Title="Balance_Check" Height="450" Width="800">
    <Grid>
        <Image Source="/Withdraw (3).png" Stretch="Fill" Height="434" VerticalAlignment="Center" HorizontalAlignment="Left" Width="800"/>
        <Label x:Name="Balance" Content="Balance: " HorizontalAlignment="Center" Height="32" Margin="0,150,0,0" VerticalAlignment="Top" Width="388" Background="#FFFFD73D" Foreground="#FF54119D" BorderBrush="#FF4C0F8D" FontFamily="Arial Black" FontSize="18" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"/>
        <Label Content="BALANCE CHECK" HorizontalAlignment="Left" Height="57" Margin="31,29,0,0" VerticalAlignment="Top" Width="272" FontSize="30" FontFamily="Franklin Gothic Medium" VerticalContentAlignment="Center" Foreground="#FFFFC839"/>
        <Button Content="Button" HorizontalAlignment="Center" Height="35" Margin="0,228,0,0" VerticalAlignment="Top" Width="144" Click="Button_BalanceCheck_Click"/>

    </Grid>
</Window>
